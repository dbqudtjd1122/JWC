<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jwcnetworks.bsyoo.jwc.mainmenu.mypage.MypageTabFragment2"
    tools:showIn="@layout/activity_mypage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/btn_serialcode_addgo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DVR 정품 등록"
            android:background="#ff3c3c"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DVR 정품 등록 시 A/S 기간 6개월 연장됩니다."
            android:gravity="center"
            android:textColor="#000"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/series_code"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
