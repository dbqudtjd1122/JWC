<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bsyoo.jwc.user.Login.IDPWSearch.IDPWSearchActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/id" />

            <TextView
                android:id="@+id/textView47"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="아이디 찾기"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="내 정보에 등록된 이메일로 찾기"
                android:textColor="@color/colorblackk"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_id_searchname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/idpwsearchtext"
                android:ems="15"
                android:hint="이름을 입력해 주세요."
                android:inputType="textPersonName"
                android:maxLength="7"
                android:padding="7dp"
                android:textColor="#000"
                android:textCursorDrawable="@null"
                android:textSize="17dp" />


            <EditText
                android:id="@+id/et_id_searchemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/idpwsearchtext"
                android:ems="15"
                android:hint="이메일 주소 전체를 입력해 주세요."
                android:inputType="textPersonName"
                android:maxLength="30"
                android:padding="7dp"
                android:textColor="#000"
                android:textCursorDrawable="@null"
                android:textSize="17dp" />

            <LinearLayout
                android:id="@+id/ll_idsearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_idsearch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_idsearch2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/btn_idview"
                    android:layout_width="95dp"
                    android:layout_height="45dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:background="@color/colorblackk"
                    android:onClick="idpwonclick"
                    android:text="전체 아이디\n발송"
                    android:textColor="@color/colorblack"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_id_search1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/colorblackk"
                android:onClick="idpwonclick"
                android:text="확인"
                android:textColor="@color/colorblack"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/pw" />

            <TextView
                android:id="@+id/textView48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="비밀번호 찾기"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="아이디로 비밀번호 찾기"
                android:textColor="@color/colorblackk"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_pw_searchid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/idpwsearchtext"
                android:ems="15"
                android:hint="아이디를 입력해 주세요."
                android:inputType="textPersonName"
                android:maxLength="16"
                android:padding="7dp"
                android:textColor="#000"
                android:textCursorDrawable="@null"
                android:textSize="17dp" />


            <LinearLayout
                android:id="@+id/ll_pwsearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_pwsearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/btn_pwview"
                    android:layout_width="95dp"
                    android:layout_height="45dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:background="@color/colorblackk"
                    android:onClick="idpwonclick"
                    android:text="임시 비밀번호\n발송"
                    android:textColor="@color/colorblack"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_pw_search1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/colorblackk"
                android:onClick="idpwonclick"
                android:text="확인"
                android:textColor="@color/colorblack"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

