<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bsyoo.jwc.mainimage.Cases.CasesActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView69"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="광희동 인삼 홍보관"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_cases1_1"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_marginRight="8dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/cases1_1"
                            android:onClick="casesClick"/>

                        <ImageView
                            android:id="@+id/img_cases1_2"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_marginRight="8dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/cases1_2"
                            android:onClick="casesClick"/>

                        <ImageView
                            android:id="@+id/img_cases1_3"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_marginRight="8dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/cases1_3"
                            android:onClick="casesClick"/>

                        <ImageView
                            android:id="@+id/img_cases1_4"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_marginRight="8dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/cases1_4"
                            android:onClick="casesClick"/>

                        <ImageView
                            android:id="@+id/img_cases1_5"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/cases1_5"
                            android:onClick="casesClick"/>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
