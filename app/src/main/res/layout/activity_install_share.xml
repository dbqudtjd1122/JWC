<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jwcnetworks.bsyoo.jwc.mainmenu.mypage.InstallShareActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="이름 : "
                    android:textColor="#000"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="홍길동"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/chbox_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#ff0000"
                    android:text="제3자 개인정보 제공 동의" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView71"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="이메일 : "
                    android:textColor="#000"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/idpwsearchtext"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:padding="5dp"
                    android:text="abcd@nate.com"
                    android:textColor="#000"
                    android:textCursorDrawable="@null"
                    android:textSize="16dp"
                    android:theme="@style/MyEditTextStyle" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView73"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="연락처 : "
                    android:textColor="#000"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/idpwsearchtext"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:maxLength="20"
                    android:padding="5dp"
                    android:text="010-0000-0000"
                    android:textColor="#000"
                    android:textCursorDrawable="@null"
                    android:textSize="16dp"
                    android:theme="@style/MyEditTextStyle" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView75"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="제목 : "
                    android:textColor="#000"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/textView76"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/idpwsearchtext"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textCursorDrawable="@null"
                    android:textSize="16dp"
                    android:theme="@style/MyEditTextStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView77"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="지역 : "
                    android:textColor="#000"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/textView79"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/idpwsearchtext"
                    android:ems="10"
                    android:hint="예) 서울 금천구"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textCursorDrawable="@null"
                    android:textSize="16dp"
                    android:theme="@style/MyEditTextStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView80"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="장소 : "
                    android:textColor="#000"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/textView81"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/idpwsearchtext"
                    android:ems="10"
                    android:hint="예) 주차장, 사무실"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textCursorDrawable="@null"
                    android:textSize="16dp"
                    android:theme="@style/MyEditTextStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView82"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="설치 예정 제품"
                    android:textColor="#000"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/chbox_install"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#ff0000"
                    android:text="설치 시공 견적 받기" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView86"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="녹화기 채널 : "
                    android:textColor="#000"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/textView87"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/idpwsearchtext"
                    android:ems="2"
                    android:gravity="right"
                    android:inputType="textEmailAddress"
                    android:maxLength="2"
                    android:padding="5dp"
                    android:text="0"
                    android:textColor="#000"
                    android:textCursorDrawable="@null"
                    android:textSize="16dp"
                    android:theme="@style/MyEditTextStyle" />

                <TextView
                    android:id="@+id/textView88"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="채널 (설치 카메라 수량)"
                    android:textColor="#000"
                    android:textSize="17dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView83"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="실내 카메라 : "
                    android:textColor="#000"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/textView84"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/idpwsearchtext"
                    android:ems="2"
                    android:gravity="right"
                    android:inputType="textEmailAddress"
                    android:maxLength="2"
                    android:padding="5dp"
                    android:text="0"
                    android:textColor="#000"
                    android:textCursorDrawable="@null"
                    android:textSize="16dp"
                    android:theme="@style/MyEditTextStyle" />

                <TextView
                    android:id="@+id/textView85"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="대"
                    android:textColor="#000"
                    android:textSize="17dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView89"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="실외 카메라 : "
                    android:textColor="#000"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/textView90"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/idpwsearchtext"
                    android:ems="2"
                    android:gravity="right"
                    android:inputType="textEmailAddress"
                    android:maxLength="2"
                    android:padding="5dp"
                    android:text="0"
                    android:textColor="#000"
                    android:textCursorDrawable="@null"
                    android:textSize="16dp"
                    android:theme="@style/MyEditTextStyle" />

                <TextView
                    android:id="@+id/textView91"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="대"
                    android:textColor="#000"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textVi"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="원하는 화소 : "
                    android:textColor="#000"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/textView92"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/idpwsearchtext"
                    android:ems="2"
                    android:gravity="right"
                    android:inputType="textEmailAddress"
                    android:maxLength="3"
                    android:padding="5dp"
                    android:text="200"
                    android:textColor="#000"
                    android:textCursorDrawable="@null"
                    android:textSize="16dp"
                    android:theme="@style/MyEditTextStyle" />

                <TextView
                    android:id="@+id/textView93"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="만 화소"
                    android:textColor="#000"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView95"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="기타 문의사항"
                    android:textColor="#000"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/textView96"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/idpwsearchtext"
                    android:inputType="textEmailAddress"
                    android:maxLength="300"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textCursorDrawable="@null"
                    android:textSize="16dp"
                    android:theme="@style/MyEditTextStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#ff3c3c"
                    android:text="완료"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
