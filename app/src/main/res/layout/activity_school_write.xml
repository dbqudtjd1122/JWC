<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jwcnetworks.bsyoo.jwc.mainimage.school.SchoolWriteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    app:srcCompat="@drawable/jwc_small_logo_red" />

                <TextView
                    android:id="@+id/tv_writetitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="서포터즈 지원서"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_applytime_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="교육 신청기간"
                android:textColor="#000"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_applytime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="2017-12-01 ~ 2017-12-15"
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_lecturetitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="교육 시행날짜"
                android:textColor="#000"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_lecture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="2017-12-01 00:00"
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_teamname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="영업팀"
                android:textColor="#000"
                android:textSize="17dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_teaminfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="담당자 문대건 부장 연락처 : 1899-7602\n(전화문의 마감시간 9:30~18:00)"
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView65"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="교육장소"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView66"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="서울시 금천구 가산동 371-51\n한국전자협동(주) 공장B동 4층"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView57"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="이름 : "
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_writename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="홍길동"
                    android:textColor="#000"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView61"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="참석 인원"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/et_personnel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/idpwsearchtext"
                    android:ems="2"
                    android:gravity="right"
                    android:inputType="phone"
                    android:maxLength="2"
                    android:padding="5dp"
                    android:text="1"
                    android:textCursorDrawable="@null"
                    android:textSize="15dp"
                    android:theme="@style/MyEditTextStyle" />

                <TextView
                    android:id="@+id/textView62"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="명"
                    android:textColor="#000"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView63"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="바라는점"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView64"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="(교육내용, 교육방식 등 자유롭게 작성해 주세요.)"
                    android:textColor="#000"
                    android:textSize="15dp" />


                <EditText
                    android:id="@+id/et_motive"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/idpwsearchtext"
                    android:hint="300자 내외로 작성 해주세요."
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:maxLines="300"
                    android:padding="5dp"
                    android:scrollbars="vertical"
                    android:textColor="#000"
                    android:textCursorDrawable="@null"
                    android:textSize="13dp"
                    android:theme="@style/MyEditTextStyle"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView68"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(교육 취소시 시행날짜 하루전날까지 연락 바랍니다.)"
                android:gravity="center"
                android:textColor="#000"/>

            <Button
                android:id="@+id/btn_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="#ff0000"
                android:text="작성 완료"
                android:textColor="#ffffff"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
