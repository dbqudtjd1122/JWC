<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bsyoo.jwc.user.mypage.DeleteUserActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#fcaaaa"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정 탈퇴 안내"
            android:textColor="#000"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/textView54"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- 내 프로필 정보(아이디, 이름, 주소, 사업자정보)"
            android:textSize="17dp"
            android:textColor="#000"
            android:layout_margin="7dp"/>

        <TextView
            android:id="@+id/textView56"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- 탈퇴시 복구가 불가능하니 신중하게 선택하세요."
            android:textSize="17dp"
            android:textColor="#000"
            android:layout_margin="7dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/ch_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#ff0000"
            android:text="모든 내용을 이해하였으며, 탈퇴에 동의함"
            android:textColor="#ff0000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#ff0000"
            android:text="확인"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
