<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarSize">65dp</item>
        <!-- 액션바 백그라운드 색상-->
        <item name="colorPrimary">@color/colorblack</item>
        <!-- 액션바위 상태바 색상-->
        <item name="colorPrimaryDark">@color/colorblackk</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <!-- Main 액션바 크게 (Manifest 설정) -->
    <style name="BigAppTheme.NoActionBar" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="actionBarSize">75dp</item>
        <item name="colorControlNormal">@color/colorblack</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Intro Title 없애기 (Manifest 설정) -->
    <style name="AppTheme2" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Edittext handle 색상변경 -->
    <style name="MyEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/colorred</item>
        <item name="android:background">@color/colorTransparency</item>
    </style>

    <!-- Edittext Main 모델검색-->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorAction</item>
        <item name="colorControlActivated">@color/colorred</item>
        <item name="android:textCursorDrawable">@color/colorAction</item>
        <item name="android:background">@color/colorTransparency</item>
    </style>


    <!-- TextView 밑줄 생기기 -->
    <string name="your_string_here">This is an <u>underline</u>.</string>

    <style name="AppTheme.NoActionBar">
        <item name="colorControlNormal">@color/colorblack</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
