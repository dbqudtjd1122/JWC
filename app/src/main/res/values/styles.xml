<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarSize">65dp</item>
        <item name="colorPrimary">@color/colorblackk</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Theme.MyTheme" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/jwc_logo_red</item>
    </style>

    <!-- Intro Title 없애기 (Manifest 설정) -->
    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Edittext handle 색상변경 -->
    <style name="MyEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/colorred</item>
        <item name="android:background">@color/colorTransparency</item>
    </style>


    <!-- TextView 밑줄 생기기 -->
    <string name="your_string_here">This is an <u>underline</u>.</string>


    <style name="AppTheme.NoActionBar">
        <item name="colorControlNormal">@color/colorblack</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
